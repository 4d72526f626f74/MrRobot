    function SetKosatkaMissileCooldown(value) memory.write_int(memory.script_global(Globals.KosatkaMissileCooldown), value) end
    function SetKosatkaMissileDistance(value) memory.write_float(memory.script_global(Globals.KosatkaMissileDistance), value) end
    function RemoveKosatkaRequestCooldown() memory.write_int(memory.script_global(Globals.KosatkaRequestCooldown), 0) end
    function RemoveKosatkaDinghyCooldown() memory.write_int(memory.script_global(Globals.KosatkaDinghyCooldown), 0) end
    function RemoveMOCRequestCooldown() memory.write_int(memory.script_global(Globals.MOCRequestCooldown), 0) end
    function RemoveAvengerRequestCooldown() memory.write_int(memory.script_global(Globals.AvengerRequestCooldown), 0) end
    function RemoveTerrorbyteRequestCooldown() memory.write_int(memory.script_global(Globals.TerrorbyteRequestCooldown), 0) end
    function RemovePersonalVehicleRequestCooldown() memory.write_int(memory.script_global(Globals.PersonalVehicleRequestCooldown), 0) end
    function RemoveCEOVehicleRequestCooldown() memory.write_int(memory.script_global(Globals.CEOVehicleRequestCooldown), 0) end
    function SetTerrorbyteDroneCooldown(value) memory.write_int(memory.script_global(Globals.TerrorbyteDroneCooldown), value) end
    function SetTerrorbyteDroneDistance(value) memory.write_float(memory.script_global(Globals.TerrorbyteDistance), value) end
    function SetTerrorbyteDroneHeight(value) memory.write_float(memory.script_global(Globals.TerrorbyteHeight), value) end
    function SetTerrorbyteDroneShockCooldown(value) memory.write_int(memory.script_global(Globals.TerrorbyteShockCooldown), value) end
    function SetTerrorbyteDroneBoostRechargeTime(value) memory.write_int(memory.script_global(Globals.TerrorbyteBoostRechargeTime), value) end
    function SetTerrorbyteDroneDetonateCountdown(value) memory.write_int(memory.script_global(Globals.TerrorbyteDetonateCountdown), value) end
    function SetTerrorbyteDroneDamagePlayers(value) memory.write_int(memory.script_global(Globals.TerrorbyteDroneDamagePlayers), value) end
    function SetTerrorbyteDroneDamagePeds(value) memory.write_int(memory.script_global(Globals.TerrorbyteDroneDamagePeds), value) end
    function GetTerrorbyteDroneDamagePlayers() return memory.read_int(memory.script_global(Globals.TerrorbyteDroneDamagePlayers)) end
    function GetTerrorbyteDroneDamagePeds() return memory.read_int(memory.script_global(Globals.TerrorbyteDroneDamagePeds)) end
    function SetTerrorbyteDroneBoostTime(value) memory.write_int(memory.script_global(Globals.TerrorbyteDroneBoostTime), value) end
    function SetTerrorbyteDroneForwardSpeed(value) memory.write_float(memory.script_global(Globals.TerrorbyteDroneForwardSpeed), value) end
    function SetMoonpoolCooldown(value) memory.write_int(memory.script_global(Globals.MoonpoolCooldown), value) end
    function SetMk2Cooldown(value) memory.write_int(memory.script_global(Globals.Mk2Cooldown), value) end
    function SetStrikeTeamCooldown(value) memory.write_int(memory.script_global(Globals.StrikeTeamCooldown), value) memory.write_int(memory.script_global(Globals.StrikeTeamCooldown2), 0) end
    function SetOppressor2FlareCooldown(value) memory.write_int(memory.script_global(Globals.Oppressor2FlareCooldown), value) end
    function SetOppressor2ChaffDuration(value) memory.write_int(memory.script_global(Globals.Oppressor2ChaffDuration), value) end
    function SetOppressor2ChaffCooldown(value) memory.write_int(memory.script_global(Globals.Oppressor2ChaffCooldown), value) end
    function SetAcidLabRequestCooldown(value) memory.write_int(memory.script_global(Globals.AcidLabRequestCooldown), value) end
    function RemovePersonalVehicleRequestDelay() memory.write_int(memory.script_local(Globals.FMScript, Globals.PersonalVehicleRequestDelay), 0) end
end

return Cooldowns