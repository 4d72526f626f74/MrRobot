_G.math.log2 = function(x)
    return math.log(x, 2)
end

_G.math.exp2 = function(x)
    return 2 ** x
end

_G.math.round = function(num, dp)
    local mult = 10 ^ (dp or 0)
    return math.floor(num * mult + 0.5) / mult
end

_G.math.factorial = function(n)
    if n == 0 then
        return 1
    end
    return n * math.factorial(n - 1)
end