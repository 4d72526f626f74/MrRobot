pluto_class Bitfield
    function __construct(value=0, addr=nil)
        self.value = value
        self.addr = addr
    end

    function __call()
        if self.addr then memory.write_int(self.addr, self.value) end
    end

    function IsSet(mask)
        return self.value & mask == mask
    end

    function Get(mask)
        return self.value & mask
    end

    function Set(mask)
        self.value = self.value | mask
        self()
    end

    function Clear(mask)
        self.value = self.value & ~mask
        self()
    end

    function Toggle(mask)
        self.value = self.value ~ mask
        self()
    end

    function ExtractBits(offset, length)
        return (self.value >> offset) & ((1 << length) - 1)
    end

    function ModifyBits(offset, length, bits)
        local mask = ((1 << length) - 1) << offset
        self.value = (self.value & ~mask) | ((bits << offset) & mask)
        self()
    end

    function SetBool(mask, bool)
        if bool then
            self:Set(mask)
        else
            self:Clear(mask)
        end
    end

    function Reset()
        self.value = 0
        self()
    end
end

return Bitfield